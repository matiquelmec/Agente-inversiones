# CRYPTOTRADING AI ADVISOR - CONFIGURACIÓN DE ENTORNO

# ================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================
NODE_ENV=development
PORT=3001

# ================================
# CONFIGURACIÓN DE RISK MANAGEMENT
# ================================
# Máximo porcentaje de riesgo por trade (1-3%)
DEFAULT_MAX_RISK_PER_TRADE=2

# Máximo apalancamiento permitido (10-20x)
DEFAULT_MAX_LEVERAGE=20

# Ratio mínimo Risk/Reward (2:1 mínimo recomendado)
DEFAULT_MIN_RR_RATIO=2

# Máximo número de pérdidas consecutivas antes de pausa
MAX_CONSECUTIVE_LOSSES=3

# Porcentaje de drawdown para stop de emergencia
EMERGENCY_STOP_PERCENT=20

# ================================
# CONFIGURACIÓN DE TRADING
# ================================
# Umbral de beneficio para mover SL a breakeven (%)
BREAKEVEN_PROFIT_THRESHOLD=40

# Intervalo de análisis en milisegundos (15 min = 900000)
ANALYSIS_INTERVAL=900000

# Número de criptomonedas a monitorear
TOP_CRYPTOS_COUNT=50

# Score mínimo de confluencia para generar señal
MIN_CONFLUENCE_SCORE=75

# ================================
# API KEYS - EXCHANGES
# ================================
# Binance API (para datos de mercado)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Bitget API (opcional)
BITGET_API_KEY=your_bitget_api_key_here
BITGET_SECRET_KEY=your_bitget_secret_key_here

# ================================
# API KEYS - DATA PROVIDERS
# ================================
# CoinMarketCap API
CMC_API_KEY=your_coinmarketcap_api_key_here

# TradingView API (opcional)
TRADINGVIEW_API_KEY=your_tradingview_api_key_here

# ================================
# NOTIFICACIONES
# ================================
# Telegram Bot para alertas
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ================================
# BASE DE DATOS
# ================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/cryptotrading

# Redis para cache (opcional)
REDIS_URI=redis://localhost:6379

# ================================
# CONFIGURACIÓN DE LOGGING
# ================================
# Nivel de log (error, warn, info, debug)
LOG_LEVEL=info

# Directorio de logs
LOGS_DIR=./logs

# ================================
# CONFIGURACIÓN DE SEGURIDAD
# ================================
# JWT Secret para autenticación
JWT_SECRET=your_super_secret_jwt_key_here

# Rate limiting - requests por minuto
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ================================
# CONFIGURACIÓN DE ANÁLISIS TÉCNICO
# ================================
# Timeframes a analizar (separados por coma)
ANALYSIS_TIMEFRAMES=1m,5m,15m,1h,4h,1d

# Indicadores a usar
TECHNICAL_INDICATORS=RSI,MACD,BBWP,FIBONACCI,VOLUME

# ================================
# CONFIGURACIÓN DE WEBSOCKETS
# ================================
# Puerto para WebSocket server
WEBSOCKET_PORT=3002

# Heartbeat interval en segundos
WS_HEARTBEAT_INTERVAL=30

# ================================
# CONFIGURACIÓN DE DESARROLLO
# ================================
# Modo debug
DEBUG_MODE=true

# Mock de APIs en desarrollo
USE_MOCK_APIS=false

# Seed para datos de prueba
TEST_DATA_SEED=12345